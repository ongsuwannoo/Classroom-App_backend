    "/api/classroom/create": {
      "post": {
        "tags": [
          "Classroom management"
        ],
        "summary": "Create Classroom",
        "description": "Create Classroom",
        "parameters": [
          {
            "in": "header",
            "name": "x-access-token",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A Classroom object",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer",
                  "description": "The Classroom ID."
                },
                "name": {
                  "type": "string",
                  "description": "The Classroom name."
                },
                "description": {
                  "type": "string",
                  "description": "The Classroom description."
                },
                "ownerId": {
                  "type": "integer",
                  "description": "The Classroom owner Id."
                }
              }
            }
          }
        }
      }
    },
    "/api/classroom/get/{classroomId}": {
      "get": {
        "tags": [
          "Classroom management"
        ],
        "summary": "get classroom by ID",
        "parameters": [
          {
            "in": "header",
            "name": "x-access-token",
            "required": true,
            "type": "string"
          },
          {
            "in": "path",
            "name": "classroomId",
            "type": "integer",
            "required": true,
            "description": "Numeric ID of the classroom to get"
          }
        ],
        "responses": {
          "200": {
            "description": "A Classroom object",
            "schema": {
              "type": "object",
              "properties": {
                "description": {
                  "type": "string",
                  "description": "The Classroom description."
                },
                "classroom": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer",
                      "description": "The Classroom ID."
                    },
                    "name": {
                      "type": "string",
                      "description": "The Classroom name."
                    },
                    "description": {
                      "type": "string",
                      "description": "The Classroom description."
                    },
                    "ownerId": {
                      "type": "integer",
                      "description": "The Classroom owner Id."
                    },
                    "owner": {
                      "type": "object",
                      "properties": {
                        "firstname": {
                          "type": "string",
                          "description": "The User firstname."
                        },
                        "lastname": {
                          "type": "string",
                          "description": "The User lastname."
                        },
                        "email": {
                          "type": "string",
                          "description": "The User email."
                        },
                        "sid": {
                          "type": "string",
                          "description": "The User student."
                        }
                      }
                    }
                  }
                },
                "userIsOwner": {
                  "type": "boolean",
                  "description": "The User is owner classroom."
                }
              }
            }
          }
        }
